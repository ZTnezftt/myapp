<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/de_title" android:id="@+id/da_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/da_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/de_albums"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <RelativeLayout
                android:id="@+id/da_re1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/de_albums"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:id="@+id/de_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />
                <TextView
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/de_name"
                    android:id="@+id/shoucangtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ToggleButton
                    android:background="@drawable/toggle"
                    android:checked="false"
                    android:layout_marginTop="15dp"
                    android:id="@+id/shoucang"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/shoucangtext"
                    android:textOff=""
                    android:textOn=""
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </RelativeLayout>
            <View
                android:id="@+id/da_v1"
                android:layout_below="@id/da_re1"
                android:background="@color/lightgray"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_below="@id/da_v1"
                android:id="@+id/da_l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="24sp"
                    android:id="@+id/imtro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/da_t1"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="材料"
                android:layout_below="@id/da_l1"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/da_v2"
                android:layout_below="@id/da_t1"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/da_v2"
                android:id="@+id/de_burden"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/da_t2"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="做法"
                android:layout_below="@id/de_burden"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/de_steps"
                android:layout_below="@id/da_t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>